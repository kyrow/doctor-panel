generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Form {
  id                 Int     @id @default(autoincrement())
  fio                String
  type               D_TYPE  @default(CLIENT)
  client_file        String
  doctor_file        String?
  doctor_diagnosis   String?
  doctor_description String?
}

enum D_TYPE {
  DOCTOR
  CLIENT
}
